<div class="sidebar-nav">
  {%- assign sidebar_nav_list = section.settings.sidebar_nav_list -%}
  {% if linklists[sidebar_nav_list].links.size > 0 %}
    {% for link in linklists[sidebar_nav_list].links %}
      <div>{{ link.title }}</div>
      {% if link.links != blank %}
        {% for child in link.links %}
          <div>{{ child.title }}</div>
        {% endfor %}
      {% endif %}
    {% endfor %}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Sidebar Navigation",
    "settings": [
      {
        "type": "link_list",
        "id": "sidebar_nav_list",
        "label": "Sidebar Navigation List"
      }
    ]
  }
{% endschema %}